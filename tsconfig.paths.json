/*
  For any folder using an index barrel, setup a path like this:
  @components": ["./src/components"]

  If you want to import directly from a folder, setup a path like this:
  @utils/*": ["./src/utils/*"]

  For testing, any aliases will need to also be setup in the package.json for Jest.
*/

{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components": ["./src/components"],
      "@constants": ["./src/constants"],
      "@hooks": ["./src/hooks"],
      "@contexts": ["./src/contexts"],
      "@integration": ["./src/integration"],
      "@interfaces": ["./src/interfaces"],
      "@pages": ["./src/pages"],
      "@services": ["./src/services"],
      "@styles": ["./src/styles"],
      "@utils": ["./src/utils"],
      "@test-utils": ["./src/test-utils"]
    }
  }
}
